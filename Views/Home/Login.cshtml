@model TP_PW3.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<h2 class="text-center mt-5">Login</h2>
<div class="container justify-content-center mb-5 pb-5">
    <div class="row justify-content-center">
        <form action="" method="post">
            <div class="form-group">
                <label class="mr-sm-2" for="email">Email : </label>
                <input type="email" class="form-control mb-2 mr-sm-2" placeholder="Ingrese email" id="email">
                @Html.ValidationMessageFor(o => o.Email)
            </div>
            <div class="form-group">
                <label class="mr-sm-2" for="pwd">Password : </label>
                <input type="password" class="form-control mb-2 mr-sm-2" placeholder="Ingrese Contraseña" id="pwd">
                @Html.ValidationMessageFor(o => o.Password)
            </div>
            <button type="submit" class="btn btn-success">Iniciar</button>
        </form>
    </div>
</div>